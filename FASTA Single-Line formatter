#!/bin/bash			
			
INPUT_FILE="example_protein_fastas.txt"       # Input FASTA file			
OUTPUT_FILE="example_formatted_protein_fastas.txt" # Output FASTA file with sequences in one line			
			
awk '			
    /^>/ {			
        if (seq) {			
            print seq			
        }			
        print $0			
        seq=""			
        next			
    }			
    { seq = seq $0 }			
    END { if(seq) print seq }			
' "$INPUT_FILE" > "$OUTPUT_FILE"			
			
echo "âœ… Done! Sequences are now single-line in $OUTPUT_FILE"			
