awk '		
  /^>/ {		
    if (seq && length(seq) > 2200) {		
      print header		
      print seq		
    }		
    header = $0		
    seq = ""		
    next		
  }		
  {		
    seq = seq $0		
  }		
  END {		
    if (seq && length(seq) > 2200) {		
      print header		
      print seq		
    }		
  }		
' example_all_protein.fasta > long_proteins.fasta		
