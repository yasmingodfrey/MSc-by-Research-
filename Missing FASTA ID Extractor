#!/bin/bash					
					
# Input and output files					
input_file="example_formatted_protein_fastas"					
output_file="example_missing_sequence_ids"					
					
# Extract protein IDs with missing sequences					
awk 'BEGIN{FS="\n"}					
    /^>/{header=$0; getline seq; if(tolower(seq)=="sequence not found") print substr(header,2)}' "$input_file" > "$output_file"					
					
echo "Missing protein IDs saved to $output_file"					
